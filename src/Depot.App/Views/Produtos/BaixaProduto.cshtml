@model Depot.App.ViewModels.ProdutoViewModel

<h4>Baixa de Produtos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="BaixaProduto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" name="qtdAnterior" asp-for="Quantidade" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" readonly class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <textarea asp-for="Descricao" class="form-control"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantidade" class="control-label"></label>
                @*<input asp-for="Quantidade" class="form-control" />*@
                @Html.EditorFor(model => model.Quantidade, new { htmlAttributes = new { @class = "form-control" } })
                <span asp-validation-for="Quantidade" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-md-6">
                    <input type="submit" value="Retirar material" class="btn btn-primary" />
                </div>
                    <div class="col-md-4">
                        <a class="btn btn-info" asp-action="Index">Voltar</a>
                    </div>
                </div>
</form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

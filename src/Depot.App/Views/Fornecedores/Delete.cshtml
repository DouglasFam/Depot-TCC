@model Depot.App.ViewModels.FornecedorViewModel

@{
    ViewData["Title"] = "Deletar Fornecedor";
}

<h1></h1>

<h3>Você tem certeza que deseja remover esse fornecedor?</h3>
<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CNPJ)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CNPJ)
        </dd>

    </dl>

    <form asp-action="Delete">
        <div class="form-group row">
            <input type="hidden" asp-for="Id" />
            <div class="col-md-4">
                <input type="submit" value="Deletar" class="btn btn-danger" />
            </div>
            <div class="col-md-4">
                <a class="btn btn-info" asp-action="Index">Voltar</a>
            </div>
        </div>
    </form>
</div>
